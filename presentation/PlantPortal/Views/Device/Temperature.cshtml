@model List<Device.Temperature>

@{
    ViewData["Title"] = "Данные температуры";
}

<h1>Данные температуры</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Дата и время
            </th>
            <th>
                Температура
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Degrees)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index">Назад</a>
</div>
